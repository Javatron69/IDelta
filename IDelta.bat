@echo off
title IDelta v3.8 by DevDelta
color 0f

:: ================[ VARS ]================

:: Location of minecraft instance
set minecraftRuntime=.minecraft

:: File to be moved
set file=Delta-b1.jar

:: Delay between PFile deletion and %file% xc
:: (change it depending on your download speed & launcher speed)
set waitDelay=2

:: ================[ CODE ]================

:: init
set mdir=%appdata%\%minecraftRuntime%\mods
set placeholder=%mdir%\Placeholder.jar

del /f "%placeholder%"
del /f "%appdata%\%minecraftRuntime%\mods\%file%"

:: create pf file (approx 4kb rsize & 1kb dsize)
echo  > "%placeholder%"
ping localhost -n 1 >nul

cls

:top
if exist "%placeholder%" (

	:: visual
	if "%timeout%" == "1" (
		echo Waiting for deletion.
	)
	
	ping localhost -n 1 >nul
	
	echo - Waiting.
	
	set timeout=%timeout%1
	if "%timeout%" == "111111" (
		set timeout=1
		cls
	)
	
	goto :top
)

cls
echo Found.
ping localhost -n %waitDelay% >nul

echo xc process started
xcopy "%file%" "%mdir%\%file%*"
echo Done.
pause

:: ==============[ END CODE ]==============
